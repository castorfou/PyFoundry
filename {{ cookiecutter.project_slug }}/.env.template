# =============================================================================
# Configuration d'environnement pour {{ cookiecutter.project_name }}
# =============================================================================
# Copiez ce fichier vers .env et personnalisez selon vos besoins
# Note: .env est dans .gitignore pour éviter de committer des secrets

# Métadonnées du projet
PROJECT_NAME="{{ cookiecutter.project_name }}"
PROJECT_SLUG="{{ cookiecutter.project_slug }}"
PROJECT_VERSION="0.1.0"
PYTHON_VERSION="{{ cookiecutter.python_version }}"

# Structure des dossiers
DATA_DIR=./data
RAW_DATA_DIR=./data/raw
PROCESSED_DATA_DIR=./data/processed
EXTERNAL_DATA_DIR=./data/external
NOTEBOOKS_DIR=./notebooks
SRC_DIR=./src
DOCS_DIR=./docs
REPORTS_DIR=./reports
MODELS_DIR=./models

# Configuration Jupyter
JUPYTER_CONFIG_DIR=./.jupyter
JUPYTER_DATA_DIR=./.jupyter/data
JUPYTER_RUNTIME_DIR=./.jupyter/runtime
JUPYTER_TOKEN=""  # Laissez vide pour auto-génération

# Configuration des logs
LOG_LEVEL=INFO
LOG_DIR=./logs
LOG_FORMAT="%(asctime)s - %(name)s - %(levelname)s - %(message)s"

# Configuration de développement
DEBUG=True
TESTING=False
ENVIRONMENT=development

# Configuration des données
DEFAULT_DATA_FORMAT=parquet
DEFAULT_ENCODING=utf-8
MAX_ROWS_DISPLAY=100
RANDOM_SEED=42

# Configuration des graphiques
FIGURE_DPI=300
FIGURE_FORMAT=png
PLOT_STYLE=seaborn-v0_8
FIGURE_SIZE_WIDTH=12
FIGURE_SIZE_HEIGHT=8

# Configuration Git (pour GitPython)
GIT_AUTHOR_NAME=""  # Sera récupéré depuis git config si vide
GIT_AUTHOR_EMAIL="" # Sera récupéré depuis git config si vide

